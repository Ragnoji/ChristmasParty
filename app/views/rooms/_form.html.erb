<%= form_with(model: room) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="desc">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  <br>
  <div class="date">
    <%= form.label :date_of_event %>
    <%= form.date_field :deadline_at, min: Date.today %>
  </div>

  <div class="city">
    <%= form.select :city_id, City.all.map { |city| [city.name, city.id] } %>
  </div>
  <br>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>