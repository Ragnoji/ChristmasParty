<h1>Rooms#show</h1>
<p>Find me in app/views/rooms/show.html.erb</p>

<%= form_with model: [@room, @message] do |form|  %>
    <div>
        <%= form.label :content %>
        <%= form.text_field :content %>    
    </div>
    <div>
        <%= form.submit%>   
    </div>

<% end %>

<% @messages.each do |message| %>
    <div>
        <%= message.content %>
    </div>
    <div>
        <p>By: </p>
        <%= message.user.email %>
        <hr>
    </div>
<% end %>
